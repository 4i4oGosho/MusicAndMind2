@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Identity
@using MusicAndMind2.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Microsoft.Extensions.Localization.IStringLocalizerFactory Factory
@{
    var L = Factory.Create("SharedResource", "MusicAndMind2");

    // üßÆ –í–∑–∏–º–∞–º–µ –±—Ä–æ—è –Ω–∞ –ø—Ä–æ–¥—É–∫—Ç–∏—Ç–µ –æ—Ç —Å–µ—Å–∏—è—Ç–∞
    int cartCount = 0;
    var cartJson = Context.Session.GetString("CartItems");
    if (!string.IsNullOrEmpty(cartJson))
    {
        var cartList = Newtonsoft.Json.JsonConvert.DeserializeObject<List<Product>>(cartJson);
        cartCount = cartList?.Count ?? 0;
    }
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @L["AppTitle"]</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
</head>
<body class="theme-dark">
    <header class="navbar">
        <div class="nav-left">
            <a class="brand" href="/">Music<span>&</span>Mind</a>

            <a href="/Shop" class="shop-link" title="–ú–∞–≥–∞–∑–∏–Ω">
                –ú–∞–≥–∞–∑–∏–Ω
            </a>

            <!-- üõí –ö–æ–ª–∏—á–∫–∞ -->
            <a href="/Cart" class="cart-icon" id="cart-icon" title="–ö–æ—à–Ω–∏—Ü–∞">
                üõí
                <span id="cart-count" class="cart-badge">@cartCount</span>
            </a>

            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin" class="admin-link">–ê–¥–º–∏–Ω</a>
            }

            <nav class="menu">
                <a href="/">@L["–ù–∞—á–∞–ª–æ"]</a>
                <a href="/Home/Focus">@L["–§–æ–∫—É—Å"]</a>
                <a href="/Home/Science">@L["–ù–∞—É–∫–∞"]</a>
                <a href="/Home/About">@L["–ó–∞ –Ω–∞—Å"]</a>
                <a href="/Home/Contact">@L["–ö–æ–Ω—Ç–∞–∫—Ç–∏"]</a>
            </nav>
        </div>

        <div class="nav-right">
            @if (SignInManager.IsSignedIn(User))
            {
                <span class="user-info">üë§ @UserManager.GetUserName(User)</span>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
                    <button type="submit" class="btn-logout">@L["–ò–∑—Ö–æ–¥"]</button>
                </form>
            }
            else
            {
                <a href="/Auth/Login" class="auth-link">@L["–í—Ö–æ–¥"]</a>
                <a href="/Auth/Register" class="auth-link">@L["–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è"]</a>
            }
        </div>
    </header>

    <main class="container">@RenderBody()</main>

    <footer class="footer">
        <p>¬© @DateTime.Now.Year Music & Mind ‚Ä¢ @L["@Ïù¥Î†àÎÑ§ü¶ã"]</p>
    </footer>

    <script src="/js/site.js"></script>

    <!-- Sakura petals -->
    @for (int i = 0; i < 12; i++)
    {
        <div class="sakura-petal"></div>
    }

    <style>
        /* üå∏ –ù–∞–≤–∏–≥–∞—Ü–∏—è */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            position: relative;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .brand {
            font-weight: 800;
            font-size: 1.1rem;
            color: var(--text-color, #fff);
            text-decoration: none;
        }

        .menu {
            display: flex;
            gap: 1.5rem;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 1rem;
            position: absolute;
            right: 9rem;
            top: 50%;
            transform: translateY(-50%);
        }

        .auth-link, .btn-logout {
            font-weight: 500;
            text-decoration: none;
            color: var(--text-color, #fff);
            transition: opacity 0.2s ease;
        }

            .auth-link:hover, .btn-logout:hover {
                opacity: 0.7;
            }

        .user-info {
            opacity: 0.8;
            font-size: 0.9rem;
        }

        .admin-link {
            margin-left: 1rem;
            font-weight: 600;
            text-decoration: none;
            color: var(--text-color, #fff);
            background: rgba(255, 255, 255, 0.08);
            padding: 0.4rem 0.9rem;
            border-radius: 10px;
            transition: all 0.25s ease;
            box-shadow: 0 0 10px rgba(255,255,255,0.05);
        }

            .admin-link:hover {
                background: var(--accent-color, #ff69b4);
                color: #fff;
                box-shadow: 0 0 15px rgba(255, 105, 180, 0.4);
            }

        .shop-link {
            margin-left: 1rem;
            font-size: 1.3rem;
            text-decoration: none;
            color: var(--text-color, #fff);
            transition: transform 0.2s ease, color 0.2s ease;
            display: inline-flex;
            align-items: center;
        }

            .shop-link:hover {
                transform: scale(1.1);
                color: var(--accent-color, #ff69b4);
            }

        /* üõí –ö–æ–ª–∏—á–∫–∞ */
        .cart-icon {
            position: relative;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            color: white;
            text-decoration: none;
            transition: transform 0.2s ease, color 0.2s ease;
            width: 36px;
            height: 36px;
        }

            .cart-icon:hover {
                transform: scale(1.08);
                color: #ff8ecf;
            }

        .cart-badge {
            position: absolute;
            top: -6px;
            right: -10px;
            background-color: #ff69b4;
            color: white;
            border-radius: 50%;
            font-size: 0.7rem;
            line-height: 1.2;
            padding: 2px 6px;
            font-weight: 700;
            min-width: 18px;
            min-height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 6px rgba(255, 105, 180, 0.5);
        }

        .cart-badge.animate {
            animation: bounce 0.4s ease;
        }
    </style>

    <script>
        // üíñ –ú–∞–ª—ä–∫ –µ—Ñ–µ–∫—Ç –∑–∞ –ø–æ–¥—Å–∫–∞—á–∞–Ω–µ –Ω–∞ –±—Ä–æ—è—á–∞ –ø—Ä–∏ –∑–∞—Ä–µ–∂–¥–∞–Ω–µ
        document.addEventListener("DOMContentLoaded", () => {
            const badge = document.getElementById("cart-count");
            if (badge) {
                badge.classList.add("animate");
                setTimeout(() => badge.classList.remove("animate"), 400);
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

