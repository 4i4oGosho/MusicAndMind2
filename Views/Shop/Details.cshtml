@model MusicAndMind2.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="product-details-container">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />

    <h2 class="product-title">@Model.Name</h2>
    <p class="product-price">@Model.Price €.</p>
    <p class="product-long-description">@Model.LongDescription</p>
    <p class="product-frequency">🎵 @Model.FrequencyInfo</p>

    <audio controls class="product-audio">
        <source src="@Model.SoundUrl" type="audio/mp3" />
        Вашият браузър не поддържа аудио елемента.
    </audio>

    <div class="product-actions">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="qty-row">
                <button type="button" class="qty-btn" onclick="changeQty(-1)">−</button>
                <input id="qtyInput" class="qty-input" type="text" value="1" readonly />
                <button type="button" class="qty-btn" onclick="changeQty(1)">+</button>
            </div>

            <button type="button" class="btn-buy" onclick="addToCartQty(@Model.Id)">Добави в кошницата 🛒</button>
        }
        else
        {
            <a href="/Auth/Login" class="btn-login-required">🔒 Влез, за да добавиш</a>
        }

        <a href="/Shop" class="btn-back">⬅ Обратно в магазина</a>
    </div>

    <div id="cartMessage" class="cart-message" style="display:none;">
        ✅ Продуктът е добавен в кошницата!
    </div>
</div>

@section Scripts {
    <script>
        function getQty() {
            const v = parseInt(document.getElementById('qtyInput').value, 10);
            return isNaN(v) ? 1 : v;
        }

        function setQty(v) {
            if (v < 1) v = 1;
            document.getElementById('qtyInput').value = v;
        }

        function changeQty(delta) {
            setQty(getQty() + delta);
        }

        function addToCartQty(id) {
            const qty = getQty();

            fetch('/Cart/AddToCartQty', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `id=${encodeURIComponent(id)}&qty=${encodeURIComponent(qty)}`,
                credentials: 'include'
            })
            .then(r => r.json())
            .then(data => {
                if (data && data.success) {
                    showCartMessage();
                    const badge = document.querySelector('.cart-badge');
                    if (badge && typeof data.count === 'number') {
                        badge.textContent = data.count;
                        badge.classList.add('animate');
                        setTimeout(() => badge.classList.remove('animate'), 400);
                    }
                } else {
                    alert('⚠️ Възникна проблем при добавянето.');
                }
            })
            .catch(() => alert('⚠️ Грешка при обработката на заявката.'));
        }

        function showCartMessage() {
            const msg = document.getElementById('cartMessage');
            msg.style.display = 'block';
            msg.style.opacity = 1;
            setTimeout(() => {
                msg.style.opacity = 0;
                setTimeout(() => msg.style.display = 'none', 400);
            }, 1000);
        }
    </script>
}

<style>
