@model IEnumerable<MusicAndMind2.Models.Product>

@{
    ViewData["Title"] = "Магазин";
}

<div class="shop-container">
    <h1 class="shop-title">🕉 Магазин на Music & Mind 🕉</h1>
    <p class="shop-subtitle">Инструменти, които хармонизират ума чрез звук и вибрация.</p>

    <div id="cartMessage" class="cart-message" style="display:none;">
        ✅ Продуктът е добавен в кошницата!
    </div>

    <div class="product-grid">
        @foreach (var item in Model)
        {
            <div class="product-card">
                <img src="@item.ImageUrl" alt="@item.Name" class="product-image" />

                <h3 class="product-name">
                    <a href="/Shop/Details/@item.Id">@item.Name</a>
                </h3>

                <p class="product-description">@item.Description</p>
                <p class="product-frequency">🧠 @item.FrequencyInfo</p>

                <audio controls class="product-audio">
                    <source src="@item.SoundUrl" type="audio/mp3" />
                    Вашият браузър не поддържа аудио елемента.
                </audio>

                <div class="product-footer">
                    <span class="product-price">@item.Price лв.</span>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn-buy" onclick="addToCart(@item.Id)">Добави в кошницата</button>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="btn-login-required">🔒 Влез, за да добавиш</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // 🛍️ Добавяне в кошницата без презареждане
                        function addToCart(id) {
            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest' // 🔥 това помага на сървъра да разбере, че идва от fetch
                },
                body: `id=${id}`,
                credentials: 'include' // 🧠 това праща cookie-то със сесията
            })
            .then(response => {
                if (!response.ok) throw new Error("Server error");
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    showCartMessage();
                    updateCartCount();
                } else {
                    alert('⚠️ Възникна проблем при добавянето.');
                }
            })
            .catch(() => {
                alert('⚠️ Грешка при обработката на заявката.');
            });
        }



        // ✅ Показваме малка нотификация
        function showCartMessage() {
            const msg = document.getElementById('cartMessage');
            msg.style.display = 'block';
            msg.style.opacity = 1;
            setTimeout(() => {
                msg.style.opacity = 0;
                setTimeout(() => msg.style.display = 'none', 400);
            }, 1000);
        }

        // 🔢 Обновяване на броя в количката горе
        function updateCartCount() {
            fetch('/Cart/Index')
                .then(r => r.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const count = doc.querySelectorAll('.cart-item').length;
                    const badge = document.querySelector('.cart-badge');
                    if (badge) {
                        badge.textContent = count;
                        badge.classList.add('animate');
                        setTimeout(() => badge.classList.remove('animate'), 400);
                    }
                });
        }
    </script>
}

<style>
