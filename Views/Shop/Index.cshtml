    }

    .product-price {
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .btn-buy {
        background: #ff69b4;
        border: none;
        color: #fff;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 0.7rem;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-buy:hover {
            background: #ff85c0;
            transform: scale(1.05);
        }

    /* 🚫 Бутон за гостите */
    .btn-login-required {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-login-required:hover {
            background: #ff69b4;
            color: #fff;
        }

    /* ✅ Нотификация при добавяне */
    .cart-message {
        position: fixed;
        top: 90px;
        right: 20px;
        background: #ff69b4;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        box-shadow: 0 0 10px rgba(255, 105, 180, 0.4);
        transition: opacity 0.4s ease;
        z-index: 1000;
    }
</style>
