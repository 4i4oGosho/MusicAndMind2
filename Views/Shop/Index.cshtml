        position: relative;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 25px rgba(255, 105, 180, 0.3);
        }

    .product-image {
        width: 100%;
        border-radius: 1rem;
        margin-bottom: 1rem;
    }

    .product-name {
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .product-description {
        font-size: 0.9rem;
        opacity: 0.9;
        min-height: 60px;
    }

    .product-frequency {
        font-size: 0.85rem;
        color: #f9b4f4;
        margin-top: 0.3rem;
    }

    .product-audio {
        width: 100%;
        margin-top: 1rem;
        margin-bottom: 1rem;
        filter: drop-shadow(0 0 4px rgba(255,105,180,0.2));
    }

    .product-footer {
        display: flex;
