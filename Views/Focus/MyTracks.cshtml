@model List<MusicAndMind2.Controllers.FocusTrackDefinition>

@{
    ViewData["Title"] = "Моите честоти";
}

<section class="prose fade-in" style="margin-top: 2rem;">
    <h1>Моите запазени честоти</h1>
    <p>Тук виждаш всички звукови пътеки, които си запазил в профила си.</p>

    <div class="grid fade-step">
        @foreach (var t in Model)
        {
            <article class="card fade-step" style="position: relative;">

                <!-- Thumb -->
                <div class="thumb">
                    <img src="@t.ImageUrl" alt="@t.Title">
                </div>

                <div class="card-body">
                    <h3>@t.Title</h3>
                    <p>@t.Description</p>

                    <!-- Player -->
                    <div class="controls">
                        <button class="btn play" data-src="@t.AudioUrl">▶</button>
                        <input class="vol" type="range" min="0" max="1" step="0.01" value="0.25" />
                        <span class="tag">@t.Tag</span>
                    </div>

                    <!-- DOWNLOAD -->
                    <a href="@t.AudioUrl" download class="btn-download">
                        Изтегли
                    </a>

                    <!-- REMOVE -->
                    <form asp-controller="Focus"
                          asp-action="Remove"
                          method="post"
                          style="margin-top: 1rem;">

                        <input type="hidden" name="trackKey" value="@t.Key" />

                        <button type="submit" class="btn-remove">
                            Премахни
                        </button>

                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </article>
        }
    </div>
</section>

<style>
    .btn-download {
        display: inline-block;
        background: #4CAF50;
        padding: 0.5rem 1rem;
        margin-top: 0.7rem;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        color: white;
        transition: 0.25s;
    }

        .btn-download:hover {
            background: #3e9c44;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(76, 175, 80, 0.4);
        }

    .btn-remove {
        background: #ff4475;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        color: white;
        font-weight: 600;
        transition: 0.25s;
    }

        .btn-remove:hover {
            background: #ff355e;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(255, 71, 102, 0.4);
        }
</style>
