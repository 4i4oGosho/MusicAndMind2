@using MusicAndMind2.Controllers
@model List<FocusTrackDefinition>

@{
    ViewData["Title"] = "Моите запазени честоти";
}

<section class="focus-library fade-in">

    <h1>Моите запазени честоти</h1>
    <p class="subtitle">
        Тук виждаш всички звукови пътеки, които си запазил в профила си.
    </p>

    <div class="grid">

        @if (Model.Count == 0)
        {
            <p class="empty">Все още нямаш запазени честоти.</p>
        }
        else
        {
            foreach (var track in Model)
            {
                <article class="card">
                    <div class="thumb">
                        <img src="@track.ImageUrl" alt="@track.Title" />
                    </div>

                    <div class="card-body">
                        <h3>@track.Title</h3>
                        <p>@track.Description</p>

                        <div class="controls">
                            <button class="btn play" data-src="@track.AudioUrl">▶</button>
                            <input class="vol" type="range" min="0" max="1" step="0.01" value="0.3" />
                            <span class="tag">@track.Tag</span>
                        </div>

                        <form method="post" asp-action="Remove" asp-controller="Focus">
                            <input type="hidden" name="trackKey" value="@track.Key" />
                            <button type="submit" class="btn-remove">Премахни</button>
                        </form>
                    </div>
                </article>
            }
        }
    </div>
</section>

<style>
    .btn-remove {
        background: #ff4757;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        color: white;
        font-weight: 600;
        margin-top: 0.5rem;
        transition: 0.25s;
    }

        .btn-remove:hover {
            background: #ff355e;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(255, 71, 102, 0.4);
        }

    .empty {
        font-size: 1.2rem;
        opacity: 0.8;
        margin-top: 2rem;
    }
</style>
