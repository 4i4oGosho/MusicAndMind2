@model MusicAndMind2.Models.Product

@{
    ViewData["Title"] = "Нов продукт";
}

<style>
    .checkout-container {
        text-align: center;
        color: var(--text-color, #fff);
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

        .checkout-container h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #ff69b4;
        }

    .cart-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 1rem;
        max-width: 400px;
        margin: 1.5rem auto;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        text-align: left;
    }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 420px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    input, select {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
    }

        input:focus, select:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        input::placeholder {
            color: rgba(255,255,255,0.7);
        }

        select option {
            background-color: #1a1a1a;
            color: #fff;
        }

    body.light-theme input,
    body.light-theme select {
        background: rgba(0,0,0,0.05);
        color: #000;
    }

        body.light-theme input::placeholder {
            color: rgba(0,0,0,0.6);
        }

        body.light-theme select option {
            background-color: #ffffff;
            color: #000000;
        }

    button {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        border: none;
        padding: 0.9rem;
        border-radius: 0.7rem;
        cursor: pointer;
        font-weight: 700;
        font-size: 1rem;
        transition: 0.3s;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.05);
        }

    textarea {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
        text-align: left;
    }

        textarea:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        textarea::placeholder {
            color: rgba(255,255,255,0.7);
        }

    body.light-theme textarea {
        background: rgba(0,0,0,0.05);
        color: #000;
    }

        body.light-theme textarea::placeholder {
            color: rgba(0,0,0,0.6);
        }

    /* Upload buttons like your "Назад / Запази" vibe */
    .btn-upload {
        width: 100%;
        padding: 0.9rem;
        border-radius: 0.7rem;
        cursor: pointer;
        font-weight: 700;
        font-size: 1rem;
        transition: 0.3s;
        border: none;
    }

    .btn-upload-white {
        background: #ffffff;
        color: #111;
        box-shadow: 0 0 10px rgba(255,255,255,0.25);
    }

        .btn-upload-white:hover {
            transform: scale(1.05);
            background: #f3f3f3;
        }

    .btn-upload-pink {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        .btn-upload-pink:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.05);
        }

    /* Filename under the button */
    .file-picked {
        margin-top: -0.5rem;
        font-size: 0.9rem;
        color: rgba(255,255,255,0.85);
        text-align: center;
        word-break: break-word;
    }

    body.light-theme .file-picked {
        color: rgba(0,0,0,0.75);
    }
</style>

<div class="checkout-container">
    <h2>Нов продукт</h2>
    <p>Създай нов инструмент за магазина.</p>

    <!-- IMPORTANT: enctype for file uploads -->
    <form asp-action="CreateProduct" method="post" class="checkout-form" enctype="multipart/form-data">
        <input asp-for="Name" placeholder="Име на продукта" />
        <span asp-validation-for="Name" class="text-danger small"></span>

        <textarea asp-for="Description" rows="3" placeholder="Кратко описание"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>

        <textarea asp-for="LongDescription" rows="4" placeholder="Разширено описание (по желание)"></textarea>
        <span asp-validation-for="LongDescription" class="text-danger small"></span>

        <input asp-for="Price" placeholder="Цена (лв.)" />
        <span asp-validation-for="Price" class="text-danger small"></span>

        <input asp-for="Category" placeholder="Категория (Купа, Камертон, Гонг...)" />
        <span asp-validation-for="Category" class="text-danger small"></span>

        <!-- IMAGE -->
        <button type="button" class="btn-upload btn-upload-white" onclick="document.getElementById('imageFile').click()">
            📷 Качи снимка
        </button>
        <input type="file" id="imageFile" name="ImageFile" accept="image/*" hidden
               onchange="setChosenFile(this,'imagePicked','ImageUrl')" />
        <div id="imagePicked" class="file-picked"></div>
        <input asp-for="ImageUrl" type="hidden" />
        <span asp-validation-for="ImageUrl" class="text-danger small"></span>

        <!-- SOUND -->
        <button type="button" class="btn-upload btn-upload-pink" onclick="document.getElementById('soundFile').click()">
            🔊 Качи звук (демо)
        </button>
        <input type="file" id="soundFile" name="SoundFile" accept="audio/*" hidden
               onchange="setChosenFile(this,'soundPicked','SoundUrl')" />
        <div id="soundPicked" class="file-picked"></div>
        <input asp-for="SoundUrl" type="hidden" />
        <span asp-validation-for="SoundUrl" class="text-danger small"></span>

        <input asp-for="FrequencyInfo" placeholder="Инфо за честоти / мозъчни вълни" />
        <span asp-validation-for="FrequencyInfo" class="text-danger small"></span>

        <div class="form-check" style="text-align:left;margin-top:0.5rem;">
            <input asp-for="IsAvailable" class="form-check-input" />
            <label asp-for="IsAvailable" class="form-check-label">Наличен в магазина</label>
        </div>

        <div style="display:flex; gap:0.5rem; margin-top:1rem;">
            <a asp-action="ProductList" class="btn btn-secondary" style="flex:1;">
                Назад
            </a>
            <button type="submit" style="flex:1;">
                Запази
            </button>
        </div>
    </form>
</div>

<script>
    // Shows the filename and optionally fills hidden URL (not required for saving if controller sets urls)
    function setChosenFile(input, labelId, hiddenFieldId) {
        const labelEl = document.getElementById(labelId);
        const hiddenEl = document.getElementById(hiddenFieldId);

        if (!labelEl) return;

        if (!input.files || !input.files.length) {
            labelEl.textContent = "";
            if (hiddenEl) hiddenEl.value = "";
            return;
        }

        const fileName = input.files[0].name;
        labelEl.textContent = "Избран файл: " + fileName;

        // Optional: set URL preview (controller will overwrite with GUID if you use that approach)
        if (hiddenEl) {
            if (hiddenFieldId === "ImageUrl") hiddenEl.value = "/images/shop/" + fileName;
            if (hiddenFieldId === "SoundUrl") hiddenEl.value = "/audio/demo/" + fileName;
        }
    }
</script>