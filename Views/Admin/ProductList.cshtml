@model IEnumerable<MusicAndMind2.Models.Product>

@{
    ViewData["Title"] = "Продукти";
}

<div class="container mt-5 mb-5 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Управление на продукти</h2>
            <p class="text-muted mb-0">Добавяй, редактирай и скривай продукти от магазина.</p>
        </div>
        <a asp-action="CreateProduct" class="btn btn-outline-light px-4 py-2 rounded-pill">
            + Нов продукт
        </a>
    </div>

    <div class="card bg-dark border-0 shadow-lg rounded-4">
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted mb-0">Все още няма добавени продукти.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Снимка</th>
                                <th>Име</th>
                                <th>Категория</th>
                                <th>Цена</th>
                                <th>Наличен</th>
                                <th>Създаден</th>
                                <th class="text-end">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td style="width: 80px;">
                                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                                        {
                                            <img src="@p.ImageUrl" alt="@p.Name" class="img-fluid rounded-3" />
                                        }
                                    </td>
                                    <td class="fw-semibold">@p.Name</td>
                                    <td>@p.Category</td>
                                    <td>@p.Price.ToString("F2") €.</td>
                                    <td>
                                        @if (p.IsAvailable)
                                        {
                                            <span class="badge bg-success">Да</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Не</span>
                                        }
                                    </td>
                                    <td>@p.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <a asp-action="EditProduct" asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-light rounded-pill me-2">
                                            Редакция
                                        </a>
                                        <a asp-action="DeleteProduct" asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-danger rounded-pill">
                                            Изтриване
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
