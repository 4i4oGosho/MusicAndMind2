@model List<MusicAndMind2.Models.Order>

@{
    ViewData["Title"] = "Покупки";
    var userEmail = ViewBag.UserEmail as string ?? "";
}

<div class="checkout-container">
    <h2>Покупки на: @userEmail</h2>

    <div class="cart-summary" style="max-width: 920px;">
        @if (!Model.Any())
        {
            <p style="opacity:0.9;">Няма направени покупки.</p>
        }
        else
        {
            <table style="width:100%; border-collapse:collapse; color:#fff;">
                <thead>
                    <tr style="border-bottom:1px solid rgba(255,255,255,0.1);">
                        <th style="padding:0.6rem; text-align:left;">Дата</th>
                        <th style="padding:0.6rem; text-align:left;">Артикули</th>
                        <th style="padding:0.6rem; text-align:right;">Сума</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr style="border-bottom:1px solid rgba(255,255,255,0.06); vertical-align:top;">
                            <td style="padding:0.6rem; white-space:nowrap; font-size:0.9rem; opacity:0.9;">
                                @o.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td style="padding:0.6rem;">
                                @foreach (var it in o.Items)
                                {
                                    <div style="padding:0.15rem 0;">
                                        • @it.ProductName — @it.Quantity x @it.UnitPrice.ToString("0.00") €
                                    </div>
                                }
                            </td>
                            <td style="padding:0.6rem; text-align:right; font-weight:700;">
                                @o.TotalAmount.ToString("0.00") €
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <a href="/Admin" class="btn-back" style="display:inline-block; margin-top:1rem;">⬅ Назад</a>
</div>
