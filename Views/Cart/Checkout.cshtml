@{
    ViewData["Title"] = "Завършване на поръчката";
    var cart = ViewBag.Cart as List<MusicAndMind2.Models.Product>;
    var total = cart?.Sum(p => p.Price) ?? 0;
}

<div class="checkout-container">
    <h2> Завършване на поръчката</h2>
    <p>Попълнете данните си, за да изпратим вашите продукти.</p>

    <div class="cart-summary">
        <h3>🛒 Обобщение на поръчката</h3>
        <ul>
            @foreach (var item in cart)
            {
                <li>@item.Name — <strong>@item.Price лв.</strong></li>
            }
        </ul>
        <p class="total">Общо: <strong>@total лв.</strong></p>
    </div>

    <form asp-action="Checkout" method="post" class="checkout-form">
        <input type="text" name="name" placeholder="Вашето име" required />
        <input type="text" name="city" placeholder="Град" required />
        <input type="text" name="address" placeholder="Адрес" required />
        <input type="text" name="phone" placeholder="Телефон" required />

        <select name="paymentMethod" required>
            <option value="card">💳 Плащане с карта</option>
            <option value="cod">🚚 Наложен платеж</option>
        </select>

        <button type="submit">✅ Потвърди поръчката</button>
    </form>
</div>

<style>
    .checkout-container {
        text-align: center;
        color: #fff;
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

        .checkout-container h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

    .cart-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 1rem;
        max-width: 400px;
        margin: 1.5rem auto;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        text-align: left;
    }

        .cart-summary h3 {
            text-align: center;
            margin-bottom: 1rem;
            color: #ff85c2;
        }

        .cart-summary ul {
            list-style: none;
            padding: 0;
            margin: 0 0 1rem 0;
        }

        .cart-summary li {
            padding: 0.3rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .cart-summary .total {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 1rem;
            font-weight: bold;
        }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 400px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    input, select {
        padding: 0.7rem;
        border: none;
        border-radius: 0.5rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
        font-size: 1rem;
    }

    button {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        border: none;
        padding: 0.8rem;
        border-radius: 0.7rem;
        cursor: pointer;
        font-weight: 700;
        font-size: 1rem;
        transition: 0.3s;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.05);
        }
</style>
