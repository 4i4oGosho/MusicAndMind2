@{
    ViewData["Title"] = "Завършване на поръчката";
}

<div class="checkout-container">
    <h2>🪷 Завършване на поръчката</h2>
    <p>Попълнете данните си, за да изпратим вашите продукти.</p>

    <form asp-action="Checkout" method="post" class="checkout-form">
        <input type="text" name="name" placeholder="Вашето име" required />
        <input type="text" name="city" placeholder="Град" required />
        <input type="text" name="address" placeholder="Адрес" required />
        <input type="text" name="phone" placeholder="Телефон" required />

        <select name="payment" required>
            <option value="Карта">💳 Карта</option>
            <option value="Наложен платеж">🚚 Наложен платеж</option>
        </select>

        <button type="submit">✅ Потвърди поръчката</button>
    </form>
</div>

<style>
    .checkout-container {
        text-align: center;
        color: #fff;
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 400px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    input, select {
        padding: 0.7rem;
        border: none;
        border-radius: 0.5rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
    }

    button {
        background: #ff69b4;
        color: white;
        border: none;
        padding: 0.8rem;
        border-radius: 0.7rem;
        cursor: pointer;
        transition: 0.3s;
    }

        button:hover {
            background: #ff85c0;
            transform: scale(1.05);
        }
</style>
