@using MusicAndMind2.Models
@{
    var cart = ViewBag.Cart as List<CartItem> ?? new List<CartItem>();
    var total = cart.Sum(i => i.Product.Price * i.Quantity);
    ViewData["Title"] = "Завършване на поръчката";
}

<style>
    .checkout-container {
        text-align: center;
        color: var(--text-color, #fff);
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

        .checkout-container h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #ff69b4;
        }

    .cart-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 1rem;
        max-width: 400px;
        margin: 1.5rem auto;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        text-align: left;
    }

        .cart-summary h3 {
            text-align: center;
            margin-bottom: 1rem;
            color: #ff85c2;
        }

        .cart-summary ul {
            list-style: none;
            padding: 0;
            margin: 0 0 1rem 0;
        }

        .cart-summary li {
            padding: 0.3rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 0.95rem;
        }

        .cart-summary .total {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 1rem;
            font-weight: bold;
        }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 420px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    input {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
    }

        input:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        input::placeholder {
            color: rgba(255,255,255,0.7);
        }

    textarea {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
        text-align: left;
    }

        textarea:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        textarea::placeholder {
            color: rgba(255,255,255,0.7);
        }

    body.theme-light input,
    body.theme-light textarea {
        background: rgba(0,0,0,0.05);
        color: #000;
    }

        body.theme-light input::placeholder,
        body.theme-light textarea::placeholder {
            color: rgba(0,0,0,0.6);
        }

    button {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        border: none;
        padding: 0.9rem;
        border-radius: 0.7rem;
        cursor: pointer;
        font-weight: 700;
        font-size: 1rem;
        transition: 0.3s;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.05);
        }

    .payment-info {
        font-size: 0.95rem;
        opacity: 0.9;
        margin-top: 0.3rem;
    }
</style>

<div class="checkout-container">
    <h2>Обобщение на поръчката</h2>

    <div class="cart-summary">
        <h3>🛒 Обобщение</h3>

        <ul>
            @foreach (var item in cart)
            {
                <li>
                    @item.Product.Name
                    — @item.Quantity x @item.Product.Price.ToString("F2") €
                </li>
            }
        </ul>

        <div class="total">
            Общо: @total.ToString("F2") €
        </div>
    </div>

    <form asp-action="Checkout" method="post" class="checkout-form">
        <input name="name" placeholder="Вашето име" required />
        <input name="city" placeholder="Град" required />
        <input name="address" placeholder="Адрес" required />
        <input name="phone" placeholder="Телефон" required />

        <!-- скрито поле -> винаги наложен платеж -->
        <input type="hidden" name="paymentMethod" value="cod" />

        <div class="payment-info">
            💳 Начин на плащане: <strong>Наложен платеж при доставка</strong>
        </div>

        <button type="submit">Потвърди поръчката</button>
    </form>
</div>
