@using MusicAndMind2.Models
@{
    // ✅ Вече кошницата е CartSessionItem (както е в CartController)
    var cart = ViewBag.Cart as List<CartSessionItem> ?? new List<CartSessionItem>();

    // ✅ Total идва от контролера; ако липсва - пресмятаме като fallback
    decimal total = ViewBag.Total != null ? (decimal)ViewBag.Total : cart.Sum(i => i.Product.Price * i.Quantity);

    ViewData["Title"] = "Завършване на поръчката";
}

<style>
    .checkout-container {
        text-align: center;
        color: var(--text-color, #fff);
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

        .checkout-container h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #ff69b4;
        }

    .cart-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 1rem;
        max-width: 500px;
        margin: 1.5rem auto;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        text-align: left;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.08);
    }

        .cart-summary h3 {
            text-align: center;
            margin-bottom: 1rem;
            color: #ff85c2;
            font-weight: 800;
        }

        .cart-summary ul {
            list-style: none;
            padding: 0;
            margin: 0 0 1rem 0;
        }

        .cart-summary li {
            padding: 0.45rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 0.95rem;
            display: flex;
            justify-content: space-between;
            gap: 12px;
        }

        .cart-summary .total {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 1rem;
            font-weight: 800;
        }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 520px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.08);
    }

    input {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
        outline: none;
    }

        input:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        input::placeholder {
            color: rgba(255,255,255,0.7);
        }

    body.theme-light input {
        background: rgba(0,0,0,0.05);
        color: #000;
    }

        body.theme-light input::placeholder {
            color: rgba(0,0,0,0.6);
        }

    button {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        border: none;
        padding: 0.95rem;
        border-radius: 0.8rem;
        cursor: pointer;
        font-weight: 800;
        font-size: 1rem;
        transition: 0.3s;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.04);
        }

    .payment-info {
        font-size: 0.95rem;
        opacity: 0.95;
        margin-top: 0.3rem;
        text-align: left;
        padding: 0.6rem 0.8rem;
        border-radius: 0.7rem;
        background: rgba(0,0,0,0.18);
        border: 1px solid rgba(255,255,255,0.08);
    }
</style>

<div class="checkout-container">
    <h2>Обобщение на поръчката</h2>

    <div class="cart-summary">
        <h3>🛒 Обобщение</h3>

        <ul>
            @foreach (var item in cart)
            {
                <li>
                    <span>@item.Product.Name — @item.Quantity x @item.Product.Price.ToString("F2") €</span>
                    <strong>@( (item.Product.Price * item.Quantity).ToString("F2") ) €</strong>
                </li>
            }
        </ul>

        <div class="total">
            Общо: @total.ToString("F2") €
        </div>
    </div>

    <form asp-action="Checkout" method="post" class="checkout-form">
        <input name="name" placeholder="Вашето име" required />
        <input name="city" placeholder="Град" required />
        <input name="address" placeholder="Адрес" required />
        <input name="phone" placeholder="Телефон" required />

        <!-- скрито поле -> винаги наложен платеж -->
        <input type="hidden" name="paymentMethod" value="cod" />

        <div class="payment-info">
            💳 Начин на плащане: <strong>Наложен платеж при доставка</strong>
        </div>

        <button type="submit">Потвърди поръчката</button>
    </form>
</div>
