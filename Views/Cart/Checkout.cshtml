@{
    ViewData["Title"] = "Завършване на поръчката";
    var cart = ViewBag.Cart as List<MusicAndMind2.Models.Product>;
    var total = cart?.Sum(p => p.Price) ?? 0;
}

<div class="checkout-container">
    <h2>Завършване на поръчката</h2>
    <p>Попълнете данните си, за да изпратим вашите продукти.</p>

    <div class="cart-summary">
        <h3>🛒 Обобщение на поръчката</h3>
        <ul>
            @foreach (var item in cart)
            {
                <li>@item.Name — <strong>@item.Price лв.</strong></li>
            }
        </ul>
        <p class="total">Общо: <strong>@total лв.</strong></p>
    </div>

    <form asp-action="Checkout" method="post" class="checkout-form">
        <input type="text" name="name" placeholder="Вашето име" required />
        <input type="text" name="city" placeholder="Град" required />
        <input type="text" name="address" placeholder="Адрес" required />
        <input type="text" name="phone" placeholder="Телефон" required />

        <select id="paymentMethod" name="paymentMethod" required>
            <option value="card">💳 Плащане с карта</option>
            <option value="cod">🚚 Наложен платеж</option>
        </select>

        <!-- 💳 Полета за карта -->
        <div id="card-fields" class="card-fields" style="display: none;">
            <input type="text" name="cardNumber" maxlength="19" placeholder="Номер на карта (xxxx xxxx xxxx xxxx)" inputmode="numeric" />
            <input type="text" name="cardName" placeholder="Име на картодържателя" />
            <div class="card-details">
                <input type="text" name="cardExp" maxlength="5" placeholder="MM/YY" />
                <input type="text" name="cardCVV" maxlength="3" placeholder="CVV" />
            </div>
        </div>

        <button type="submit">✅ Потвърди поръчката</button>
    </form>
</div>

<style>
    .checkout-container {
        text-align: center;
        color: var(--text-color, #fff);
        padding: 3rem 1rem;
        font-family: 'Inter', sans-serif;
    }

        .checkout-container h2 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #ff69b4;
        }

    .cart-summary {
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 1rem;
        max-width: 400px;
        margin: 1.5rem auto;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        text-align: left;
    }

        .cart-summary h3 {
            text-align: center;
            margin-bottom: 1rem;
            color: #ff85c2;
        }

        .cart-summary ul {
            list-style: none;
            padding: 0;
            margin: 0 0 1rem 0;
        }

        .cart-summary li {
            padding: 0.3rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .cart-summary .total {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 1rem;
            font-weight: bold;
        }

    .checkout-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 420px;
        margin: 2rem auto;
        background: rgba(255,255,255,0.05);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    input, select {
        padding: 0.8rem;
        border: none;
        border-radius: 0.6rem;
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-align: center;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s, transform 0.2s;
    }

        input:focus, select:focus {
            background: rgba(255, 255, 255, 0.15);
            transform: scale(1.02);
        }

        input::placeholder {
            color: rgba(255,255,255,0.7);
        }

        select option {
            background-color: #1a1a1a;
            color: #fff;
        }

    /* 🌗 Светла тема */
    body.light-theme input,
    body.light-theme select {
        background: rgba(0,0,0,0.05);
        color: #000;
    }

        body.light-theme input::placeholder {
            color: rgba(0,0,0,0.6);
        }

        body.light-theme select option {
            background-color: #ffffff;
            color: #000000;
        }

    /* 💳 Полета за карта */
    .card-fields {
        margin-top: 1.2rem;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        animation: fadeInCard 0.4s ease;
    }

        .card-fields input {
            margin-bottom: 0.3rem;
        }

    .card-details {
        display: flex;
        justify-content: space-between;
        gap: 0.8rem;
        flex-wrap: wrap;
    }

        .card-details input {
            flex: 1;
            min-width: 120px;
        }

    button {
        background: linear-gradient(90deg, #ff69b4, #ff85c2);
        color: white;
        border: none;
        padding: 0.9rem;
        border-radius: 0.7rem;
        cursor: pointer;
        font-weight: 700;
        font-size: 1rem;
        transition: 0.3s;
        box-shadow: 0 0 10px rgba(255,105,180,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #ff85c2, #ffb6d9);
            transform: scale(1.05);
        }

    @@keyframes fadeInCard {
        from {
            opacity: 0;
            transform: translateY(-6px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    // 💳 Показване/скриване на полетата за картата
    document.addEventListener("DOMContentLoaded", () => {
        const paymentSelect = document.getElementById("paymentMethod");
        const cardFields = document.getElementById("card-fields");

        const toggleCardFields = () => {
            if (paymentSelect.value === "card") {
                cardFields.style.display = "flex";
            } else {
                cardFields.style.display = "none";
            }
        };

        paymentSelect.addEventListener("change", toggleCardFields);
        toggleCardFields(); // при зареждане
    });
</script>

