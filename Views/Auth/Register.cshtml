@model MusicAndMind2.Models.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<section class="auth-wrapper">
    <div class="auth-card">
        <h2>🌸 Регистрация</h2>

        <form asp-action="Register" method="post" class="auth-form">
            <div class="input-group">
                <label asp-for="Email">Имейл</label>
                <input asp-for="Email" placeholder="example@email.com" required />
            </div>

            <div class="input-group">
                <label asp-for="Password">Парола</label>
                <input asp-for="Password" type="password" placeholder="••••••••" required />
            </div>

            <div class="input-group">
                <label asp-for="ConfirmPassword">Потвърди паролата</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-fancy">Създай акаунт</button>

            <p class="auth-switch">
                Вече имаш акаунт? <a href="/Auth/Login">Вход</a>
            </p>
        </form>
    </div>
</section>
